package org.si.diamond.base.parser;

import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;
import java.util.NoSuchElementException;
import java.util.StringTokenizer;

import org.si.diamond.base.exception.ParseException;
import org.si.diamond.base.util.GUIDUtil;
import org.si.diamond.web.model.TxTransactionModel;

public class DefaultMessageParser extends MessageParser {

	public List<TxTransactionModel> parse(String subject, String text) throws ParseException {
		try {
			String subSubject = subject.split(":")[1];
			SimpleDateFormat sdf = new SimpleDateFormat("ddMMyyyy");
			Date transactionDate = sdf.parse(subSubject);

			List<TxTransactionModel> returnValue = new ArrayList<TxTransactionModel>();
			
			StringTokenizer stringTokenizer1 = new StringTokenizer(text, "\n");
			while (stringTokenizer1.hasMoreTokens()) {

				String line = stringTokenizer1.nextToken();
				if (line.trim().equals("-")) break;
				
				StringTokenizer stringTokenizer2 = new StringTokenizer(line, ":");
					
				String accountId = stringTokenizer2.nextToken().trim().toLowerCase();
				String currency = stringTokenizer2.nextToken().trim();
				String description = stringTokenizer2.nextToken().trim();
				double amount = Double.parseDouble(stringTokenizer2.nextToken().trim());
				String txType = stringTokenizer2.nextToken().trim();
				TxTransactionModel txModel = new TxTransactionModel();
				txModel.setAccount(accountId);
				txModel.setCurrency(currency);
				txModel.setTransactionDescription(description);
				txModel.setAmount(amount);
				txModel.setTransactionTime(transactionDate);
				txModel.setTransactionId(GUIDUtil.getGUID());
				txModel.setTransactionType(txType);
				
				returnValue.add(txModel);
			}
			return returnValue;
		} catch (NoSuchElementException e) {
			throw new ParseException(e.getMessage(), e);
		} catch (java.text.ParseException e) {
			throw new ParseException("Unknown Date format in the subject", e);
		}
	}
	
	public List<TxTransactionModel> parse(String text) throws ParseException {
		try {
			List<TxTransactionModel> returnValue = new ArrayList<TxTransactionModel>();
			
			StringTokenizer stringTokenizer1 = new StringTokenizer(text, "\n");
			while (stringTokenizer1.hasMoreTokens()) {

				String line = stringTokenizer1.nextToken();
				if (line.trim().equals("-")) break;
				
				StringTokenizer stringTokenizer2 = new StringTokenizer(line, ":");
					
				String accountId = stringTokenizer2.nextToken().trim().toLowerCase();
				String currency = stringTokenizer2.nextToken().trim();
				String description = stringTokenizer2.nextToken().trim();
				double amount = Double.parseDouble(stringTokenizer2.nextToken().trim());
				String txType = stringTokenizer2.nextToken().trim();
				TxTransactionModel txModel = new TxTransactionModel();
				txModel.setAccount(accountId);
				txModel.setCurrency(currency);
				txModel.setTransactionDescription(description);
				txModel.setAmount(amount);
				txModel.setTransactionTime(new Date());
				txModel.setTransactionId(GUIDUtil.getGUID());
				txModel.setTransactionType(txType);
				
				returnValue.add(txModel);
			}
			return returnValue;
		} catch (NoSuchElementException e) {
			throw new ParseException(e.getMessage(), e);
		}
	}
	
}
